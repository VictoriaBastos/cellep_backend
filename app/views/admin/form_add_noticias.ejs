        <div class="container text-center">
            <h1>Nova Notícia</h1>
        </div>
    </div>
    <div class="container">
        <!-- action é o caminho onde as informações do formulário são salvas. -->
        <form action="/admin/salvar-noticia" method="POST">
            <!--  méotod post coloca informações no corpo do arquivo de envio, não sendo visível para o usuário-->
            <div class="mb-3">
                <label for="" class="form-label">
                    Nova Notícia
                </label>
                <input type="text" class="form-control" placeholder="Título da Notícia" name = "titulo" required>
            </div>
            <div class="mb-3">
                <label for="conteudo">
                    Conteúdo
                </label>
                <textarea name="" id="conteudo" cols="30" rows="10" class="form-control" name = "conteudo" required></textarea>
                </textarea>
                </div>
            </div>
            <button type="subtmit" class="btn btn-primary btn-lg w-100">Criar</button>
        </form>
    </div>
</main>
